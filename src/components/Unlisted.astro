---
const { gap } = Astro.props;
---

<style define:vars={{ gap }}>
  ul.unlisted {
    display: flex;
    flex-direction: column;
    align-items: start;
    flex-wrap: wrap;
    gap: calc(0.25rem * var(--gap, 0));
    list-style: none;
    padding: 0;
    margin: 0 !important;
  }
</style>

<ul class:list={["unlisted"]}>
  <slot />
</ul>
