---
import GithubAvatar from "./GithubAvatar.astro";
import Link from "./Link.astro";
import LinkGroup from "./LinkGroup.astro";
import LinkGroupItem from "./LinkGroupItem.astro";

const { name, github, website } = Astro.props;

const githubLink = `https://github.com/${github}`;
---

<style>
  div.contributor-card {
    align-content: center;
    align-items: center;
    justify-content: start;
    background: Canvas;
    border-radius: 0.25rem;
    box-sizing: border-box;
    display: grid;
    gap: 0.75rem;
    margin-top: 0 !important;
    grid-template-columns: 3rem auto;
    padding: 0.5rem 0.75rem;
    border-style: solid;
    border-width: 0.0625rem;
    border-color: color-mix(in srgb, currentColor 35%, Canvas);
    box-shadow: 0 0.25rem 0.25rem 0 color-mix(in srgb, black 25%, transparent);

    div.contributor-card-info {
      margin-top: 0 !important;
      padding: 0;

      h3 {
        font-size: 1.25rem;
        font-weight: bold;
        margin-top: 0.25rem !important;
        padding: 0;

        a {
          color: inherit;
          text-decoration: none;

          &:hover {
            text-decoration: underline;
          }
        }
      }
    }
  }
</style>

<div class:list={["contributor-card"]}>
  <GithubAvatar name={name} github={github} />
  <div class:list={["contributor-card-info"]}>
    <h3>
      <Link href={githubLink} class:list={["contributor-card-name"]}
        >{name}</Link
      >
    </h3>
    <LinkGroup>
      {website && <LinkGroupItem href={website}>Website</LinkGroupItem>}
    </LinkGroup>
  </div>
</div>
